{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "*": ["devtools/ts/declaredModules/*"]
    },
    "incremental": true
  },
  "include": ["./src", "./devtools", "devtools/ts/declaredModules/*"],
  "exclude": ["node_modules"]
}
